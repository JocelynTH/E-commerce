        @Html.LabelFor(model => model.opcionDevolucion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButton("opcionDevolucion", "llevar producto a paqueteria") llevar producto a paqueteria
