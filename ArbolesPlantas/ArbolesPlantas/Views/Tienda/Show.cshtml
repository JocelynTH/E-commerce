@using ArbolesPlantas.Models


@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/alan/_Layout.cshtml";

    Productos producto = (Productos)ViewBag.producto;
}

<div class="container">
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-5 ftco-animate">
                    <a href="images/product-1.jpg" class="image-popup">
                        <img src="@producto.urlImage" class="img-fluid" alt="Colorlib Template">
                    </a>
                </div>
                <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                    <h3>@producto.nombre</h3>
                    <div class="rating d-flex">
                        <p class="text-left mr-4">
                            <a href="#" class="mr-2">5.0</a>
                            <a href="#"><span class="ion-ios-star-outline"></span></a>
                            <a href="#"><span class="ion-ios-star-outline"></span></a>
                            <a href="#"><span class="ion-ios-star-outline"></span></a>
                            <a href="#"><span class="ion-ios-star-outline"></span></a>
                            <a href="#"><span class="ion-ios-star-outline"></span></a>
                        </p>
                        <p class="text-left mr-4">
                            <a href="#" class="mr-2" style="color: #000;">100 <span style="color: #bbb;">Calificaciones</span></a>
                        </p>
                        <p class="text-left">
                            <a href="#" class="mr-2" style="color: #000;">500 <span style="color: #bbb;">Vendidos</span></a>
                        </p>
                    </div>
                    <p class="price"><span>$@producto.precioVenta</span></p>
                    <p>
                        @producto.descripcion
                    </p>
                    <form action="@Url.Action("agregarProductoAlCarrito", "Tienda")" method="POST">
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@producto.Id" name="id" />
                        <div class="row mt-4">
                            <div class="w-100"></div>
                            <div class="input-group col-md-6 d-flex mb-3">
                                <span class="input-group-btn mr-2">
                                    <button type="button" class="quantity-left-minus btn" data-type="minus" onclick="modificarCantidad(false)">
                                        <i class="ion-ios-remove"></i>
                                    </button>
                                </span>
                                <input type="text" id="cantidad" name="cantidad" class="form-control input-number" value="1" min="1" max="100">
                                <span class="input-group-btn ml-2">
                                    <button type="button" class="quantity-right-plus btn" data-type="plus" onclick="modificarCantidad(true)">
                                        <i class="ion-ios-add"></i>
                                    </button>
                                </span>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <p style="color: #000;">20 Piezas maximo</p>
                            </div>
                        </div>
                        <p>
                            <input class="btn btn-large btn-dark py-3 px-5" value="Agregar al carrito" type="submit">
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{

    <script>
        var modificarCantidad = function (incrementar) {

            let inputCantidad = document.getElementById("cantidad");

            console.log(inputCantidad);

            if (incrementar) {
                inputCantidad.value = parseInt(inputCantidad.value) + 1;
            } else {
                inputCantidad.value = parseInt(inputCantidad.value) - 1;
            }
        }
    </script>
}

